    <select class="selectpicker px12" data-container="body" id="filter_option" onchange="filter_quotes(this.value);">
      <% GlobalConstant::FILTER.each do |option| %>
          <% if option == 'Current Month' %>
              <option selected><%= option %></option>
          <% else %>
              <option><%= option %></option>
          <% end %>
      <% end %>
    </select>

    <div class="input-append date from_date" id="from_date">
      <label class="label" style="vertical-align: bottom">From </label>
      <input size="16" type="text" value="" readonly class="textbox-calendar" style="font-size: 12px">
      <span class="add-on"><i class="icon-remove"></i></span>
      <span class="add-on"><i class="icon-th"></i></span>
    </div>
    <div class="input-append date to_date" id="to_date">
      <label class="label" style="vertical-align: bottom">To </label>
      <input size="16" type="text" value="" readonly class="textbox-calendar" style="font-size: 12px">
      <span class="add-on"><i class="icon-remove"></i></span>
      <span class="add-on"><i class="icon-th"></i></span>
    </div>
